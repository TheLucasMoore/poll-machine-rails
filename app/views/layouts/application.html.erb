<!DOCTYPE html>
<html>
  <head>
    <title>PollMachine</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <nav class="navbar navbar-dark bg-inverse">
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <% if current_user %>
          <li class="nav-item">
            <a class="nav-link" href="/polls">Polls</a>
          </li>
          <li class="nav-item">
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, :class => "nav-link" %>
          </li>
          <% end %>
        </ul>
        </nav>
          <div class="jumbotron">
            <h1>Poll Machine</h1>
          </div>
            <%= yield %>
      </div>
    </div>
  </body>
</html>
