<h1><%= @poll.title %></h1>
<canvas id="myChart" width="400" height="400"></canvas>
<% content_for :charts do %>
<script>

$(function() {
  var ctx = $("#myChart");
  var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: <%= raw @questions.map {|q| q.content} %>,
        datasets: [{
            label: '# of Votes',
            data: <%= raw @questions.map {|q| q.votes.count} %>,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    }
  });
});
</script>
<% end %>
