<h1><%= @poll.title %></h1>
<p>Share this poll: <%= render_shareable :buttons=> ['twitter'] %></p>

<% if @poll.user.id = @user.id %>
  <p><%= link_to "Edit Poll", edit_poll_path(@poll) %></p>
  <p><%= link_to "Add Questions", new_poll_question_path(@poll) %></p>
<% else %>
  <p></p>
<% end %>

<ul>
<% @poll.questions.each do |question| %>
  <li><h2><%= question.content %></h2>
    <form id="votes" method="POST" action="/votes">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <input type="hidden" name="question" value="<%= question.id %>">
      <button type="submit" class="button" id="submit">Vote</vote>
    </form>
  </li>
<% end %>
</ul>

<% content_for :votes do %>
<script>

$(function() {
  init()
});

function init() {
  $('.button').on('click', function(event) {
    event.preventDefault();
    $.ajax({
      url: '/votes',
      method: 'POST',
      dataType: JSON,
      data: $("#votes").serialize(),
      success: function(response) {
        alert("You Voted!");
        $('.button').hide();
      },
      error: function(xhr, resp, text) {
        alert("You already voted!")
        $('.button').hide();
      }
    });
  })
}


</script>
<% end %>
